<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#ffffff"
        android:padding="15dp">




            <TextView
                android:id="@+id/tvf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:text="From date: "
                android:textStyle="bold"
                android:textColor="#333"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/tvfromdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="26dp"
                android:layout_marginLeft="26dp"
                android:textColor="#333"
                android:textSize="22dp"
                android:layout_toRightOf="@id/tvf"/>


        <TextView
            android:id="@+id/tvt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvfromdate"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:text="To date: "
            android:textColor="#333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvtodate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="50dp"
            android:textColor="#333"
            android:textSize="22dp"
            android:layout_toRightOf="@+id/tvt"/>

        <TextView
            android:id="@+id/tvl"
            android:layout_below="@id/tvtodate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:text="Leave Type: "
            android:textStyle="bold"
            android:layout_marginTop="98dp"
            android:textColor="#333"
            android:textSize="20sp"
            />


        <TextView
            android:id="@+id/tvleavetype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="98dp"
            android:textColor="#333"
            android:textSize="22dp"
            android:layout_toRightOf="@+id/tvl"/>

        <TextView
            android:id="@+id/tvdes"
            android:layout_below="@id/tvleavetype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:text="description: "
            android:textStyle="bold"
            android:layout_marginTop="150dp"
            android:textColor="#333"
            android:textSize="20sp"
            />


        <TextView
            android:id="@+id/tvdescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="150dp"
            android:textColor="#333"
            android:textSize="22dp"
            android:layout_toRightOf="@+id/tvdes"/>

        <TextView
            android:id="@+id/tvs"
            android:layout_below="@id/tvdescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:text="Status: "
            android:textStyle="bold"
            android:layout_marginTop="210dp"
            android:textColor="#333"
            android:textSize="20sp"
            />


        <TextView
            android:id="@+id/tvstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="210dp"
            android:textColor="#333"
            android:textSize="22dp"
            android:layout_toRightOf="@+id/tvs"/>

    </RelativeLayout>

</LinearLayout>
